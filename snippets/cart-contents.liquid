<div>

    {% if cart.item_count > 0 %}
        <p>{{ 'cart.filled.title' | t }}</p>
        <form action="/cart" method="post" id="update-cart-form" novalidate>
            <div class="cart-lines">
                {% for item in cart.items %}
                    {% include 'line-item' %}
                {% endfor %}
                <input type="submit" name="update" value="Update"/>
            </div>

            <div class='subtotal-line'>
                <p>{{ 'cart.filled.subtotal' | t | upcase }}
                    <span class="price">{{ cart.total_price | money }}</span>
                </p>
            </div>
            <div>
                <p>{{ 'cart.filled.tax_shipping' | t }}</p>
            </div>
            <button type="submit" name="checkout">{{ 'cart.filled.button' | t | upcase }}</button>

        </form>
    {% else %}
        <p class="cart-empty-text ta-center">{{ 'cart.empty.title' | t }}</p>
        <a href="/" class="button js-keep-shopping">{{ 'cart.empty.button' | t }}</a>
    {% endif %}
</div>
